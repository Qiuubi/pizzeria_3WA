{% extends 'base.html.twig' %}

{% block title %}Bienvenue chez Pizzeria 3WA{% endblock %}

{% block body %}

<h1>Nos Pizzas</h1>


<div class="container">
    <div class="row align-items-start">
        {% for product in products %}
        <div class="card col-2 mb-3">
            <img src="{{ product.image }}" class="card-img-top" alt="image random" style="max-width: 540px; max-height: 270px;">
            <div class="card-body">
                <h5 class="card-title">Pizza "{{ product.name }}"</h5>
                <p class="card-text">{{ product.description }}</p>
                <p class="card-text"><small class="text-muted">{{ product.price }} â‚¬</small></p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>


{% endblock %}
